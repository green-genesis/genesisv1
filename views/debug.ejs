<!-- views/debug.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Debugging Panel - Green Genesis</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Header -->
  <header>
    <nav class="navbar">
      <div class="navbar-brand">Green Genesis</div>
      <div class="navbar-menu">
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Logout</a>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <section class="section">
      <h1>Debugging Panel</h1>
      <h2>Simulate an Issue</h2>
      <form action="/simulate-issue" method="post">
        <div class="form-group">
          <label class="form-label">Greenhouse ID</label>
          <input type="number" name="greenhouseId" class="form-control" required>
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <input type="text" name="description" class="form-control" required>
        </div>
        <div class="form-group">
          <label class="form-label">PIN</label>
          <input type="password" name="pin" class="form-control" required>
        </div>
        <button type="submit" class="form-button">Simulate Issue</button>
      </form>

      <h2>Unresolved Issues</h2>
      <% if (issues.length === 0) { %>
        <p>No issues reported.</p>
      <% } else { %>
        <% issues.forEach(function(issue) { %>
          <div class="card">
            <h3>Issue in Greenhouse ID: <%= issue.greenhouse_id %></h3>
            <p><%= issue.description %></p>
            <form action="/resolve-issue/<%= issue.id %>" method="post">
              <button type="submit" class="form-button">Resolve Issue</button>
            </form>
          </div>
        <% }); %>
      <% } %>
    </section>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 Green Genesis. All rights reserved.</p>
  </footer>
</body>
</html>
